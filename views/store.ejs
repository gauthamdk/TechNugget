<%- include("./partials/header.ejs")-%>

<% products.forEach(product =>{ %>
    <div class="container pt-3 pb-5">
        <div class="row">
            <div class="col-md-3 d-flex justify-content-center align-items-center name">
                <h1 class="">
                    <%= product.name %> 
                </h1>
            </div>

            <div class="col-md-6 d-flex justify-content-center pb-3">
            <img class="img-fluid img-thumbnail product-img" src="<%= product.image%> ">
            </div>
            <div class="h3 col-md-2 d-inline-flex d-md-flex justify-content-center align-items-center">
            <a target="_blank" href="<%= product.affiliateLink %> ">Get it here</a>
            </div>
            <div class="col-md-1 d-inline-flex d-md-flex justify-content-end justify-content-lg-center align-items-center">
            <a target="_blank" href="<%= product.instagramLink %> "><i class="fab fa-instagram fa-2x"></i></a>
            </div>
        </div>
    </div>
<% }) %> 
<%- include("./partials/footer.ejs")-%>